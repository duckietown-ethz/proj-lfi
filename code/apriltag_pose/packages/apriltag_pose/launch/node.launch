<launch>

	<group ns="$(arg veh)">
		<!--
		<node pkg="tf" type="static_transform_publisher" name="tf_cam_vehicle"
        args="$(arg cam_x) $(arg cam_y) $(arg cam_z)
            $(arg cam_qx) $(arg cam_qy) $(arg cam_qz) $(arg cam_qw)
            axle camera 100" />
			-->

		<node pkg="tf" type="static_transform_publisher" name="tf_cam_vehicle"
        args="0.06 0.0 0.085
			0.54952518 -0.54952518 0.44499672 -0.44499672
            axle camera 100" />

		<!--
		For some reason people don't follow the specs for traffic signs and the signs are more like 7 cm above ground as opposed to 13 cm.
		-->
		<node pkg="tf" type="static_transform_publisher" name="tf_apriltag_intersection"
        args="-0.61 -0.13 0.0
        	0.5 0.5 0.5 -0.5
            apriltag intersection 100" />

		<node pkg="apriltag_pose" type="apriltag_pose_node.py" name="apriltag_pose_node" output="screen">
			<remap from="apriltag_pose_node/apriltag_detections" to="tag_detections"/>
		</node>
	</group>
</launch>
